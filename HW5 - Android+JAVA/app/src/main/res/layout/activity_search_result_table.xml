<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SearchResultTable"
        android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
            android:id="@+id/prod_toolbar_results"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/tabColor"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:titleTextColor="#ffffffff"/>
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/progressLayoutId"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="80dp">
        <ProgressBar
            android:id="@+id/progresbarId1"
            android:layout_width="83dp"
            android:layout_height="88dp"
            style="?android:attr/progressBarStyleLarge"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:visibility="visible"
            tools:layout_editor_absoluteX="100dp"
            tools:layout_editor_absoluteY="230dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Searching Events ..."
            />
    </LinearLayout>

    <!--<TextView-->
        <!--android:id="@+id/active_text"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="357dp"-->
        <!--android:text="TextView" />-->

    <android.support.v7.widget.RecyclerView
        android:id="@+id/eventListRV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        tools:layout_editor_absoluteX="48dp"
        tools:layout_editor_absoluteY="16dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"></android.support.v7.widget.RecyclerView>


</LinearLayout>
