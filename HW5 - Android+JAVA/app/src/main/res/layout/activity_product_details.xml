    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
            android:id="@+id/prod_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/tabColor"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:titleTextColor="#ffffffff">
        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/facebook"
            android:src="@drawable/facebook"
            android:layout_height="match_parent"
            android:layout_gravity="right"/>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/product_details_sliding_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabMode="fixed"
        app:tabBackground="@color/tabColor"
        app:tabSelectedTextColor="@color/tabSelectedColor"
        app:tabTextColor="@color/tabDefaultColor"
        />

    <android.support.v4.view.ViewPager
        android:id="@+id/product_details_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

